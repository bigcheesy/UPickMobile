<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bar_item_thumbnail"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/coffeethumbnail"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kafe"
        android:id="@+id/bar_item_name"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bar_item_thumbnail"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="60"
        android:id="@+id/bar_item_price"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:layout_alignTop="@+id/bar_item_name"
        android:layout_toStartOf="@+id/textView9"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LEK"
        android:id="@+id/textView9"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:textColor="@color/primaryTextColor"
        android:layout_alignTop="@+id/bar_item_price"
        android:layout_alignParentRight="true" />

    <FrameLayout
        android:id="@+id/bar_item_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bar_add_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@+id/bar_item_add"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:src="@drawable/ic_add_shopping_cart_black_24dp" />

        <TextView
            android:id="@+id/bar_item_quantity"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginRight="5dp"
            android:background="@drawable/orange_circle"
            android:gravity="center"
            android:text="88"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </FrameLayout>

</RelativeLayout>