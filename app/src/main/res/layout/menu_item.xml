<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/menu_thumbnail"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/coffeethumbnail"
        android:scaleType="fitXY"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kafe"
        android:id="@+id/menu_item_name"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/menu_thumbnail"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="60"
        android:id="@+id/menu_item_price"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:layout_alignTop="@+id/menu_item_name"
        android:layout_toStartOf="@+id/textView9"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LEK"
        android:id="@+id/textView9"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:layout_alignTop="@+id/menu_item_price"
        android:layout_toStartOf="@+id/menu_add_button" />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/menu_add_button"
        android:src="@drawable/ic_add_shopping_cart_black_24dp"
        android:background="#00000000"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />
</RelativeLayout>